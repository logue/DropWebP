<UserControl
    x:Class="DropWebP.Views.HomeTabItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:DropWebP.ViewModels"
    av:DataContext="{av:DesignInstance Type=viewmodels:HomeTabItemlViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="av">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            HorizontalAlignment="Center"
            FontFamily="Segoe MDL2 Assets"
            FontSize="64"
            Text="&#xE8B9;" />
        <TextBlock HorizontalAlignment="Center" Text="{Binding Message}" />
        <Button
            Margin="24"
            Command="{Binding BrowseButtonCommand}"
            Style="{StaticResource ButtonRevealStyle}">

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Text="&#xE838;" />
                <TextBlock VerticalAlignment="Center" Text="{Binding BrowseText}" />
            </StackPanel>
        </Button>
    </StackPanel>

</UserControl>
