<UserControl
    x:Class="DropWebP.Views.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:DropWebP.ViewModels"
    av:DataContext="{av:DesignInstance Type=viewmodels:AboutTabItemViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="av">
    <Grid Margin="3" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image
            x:Name="Logo"
            Grid.Row="0"
            Grid.RowSpan="5"
            Grid.Column="0"
            Width="64"
            Height="64"
            Margin="0,-1,0,0"
            Source="/Resources/vise.png" />
        <TextBlock
            x:Name="TextBlock_ProductName"
            Grid.Row="0"
            Grid.Column="1"
            FontSize="24"
            Text="{Binding Title}" />
        <TextBlock
            x:Name="TextBlock_ProductDescription"
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Description}" />
        <TextBlock
            x:Name="TextBlock_ProductVersion"
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Version}" />
        <TextBlock
            x:Name="TextBlock_WebPVersion"
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding WebPVersion}" />
        <TextBlock
            x:Name="TextBlock_ProductCopyright"
            Grid.Row="4"
            Grid.Column="1"
            VerticalAlignment="Bottom"
            Text="{Binding Copyright}" />
        <Button
            x:Name="Button_Visit"
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding VisitButtonCommand}">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Text="&#xE774;" />
                <TextBlock VerticalAlignment="Center" Text="{Binding VisitText}" />
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
