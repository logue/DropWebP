<UserControl x:Class="DropWebP.Views.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StatusBar VerticalAlignment="Bottom" Background="#99FFFFFF" BorderThickness="0,1,0,0" BorderBrush="Gray">
        <StatusBarItem Visibility="{Binding progressBarVisibility.Value}">
            <ProgressBar Width="50" Height="12" Value="{Binding progress.Value}" Maximum="{Binding progressMaximum.Value}" Minimum="0"/>
        </StatusBarItem>
        <StatusBarItem>
            <TextBlock Text="{Binding statusBarText.Value}"/>
        </StatusBarItem>
    </StatusBar>
</UserControl>
