{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "drop-compress-image",
  "mainBinaryName": "Drop Compress Image",
  "version": "2.0.0",
  "identifier": "dev.logue.drop-compress-image",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build-only",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Drop Compress Image",
        "width": 640,
        "height": 480,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
